            <div class="bg-light">
                <div class="container-fluid d-flex" style="width: 95%">
                    <div class="bg-light p-3" style="width: 75%; background: url('/ressources/background_custom_lightGray.png'); min-height: 600px;">
                        <div class="container-fluid">
                            <style>
                                @keyframes artiste-container-anim {
                                    from {opacity: 1; box-shadow: inset 0 0 0 1px #FFFFFF;}
                                    to {opacity: 0.7; box-shadow: inset 0 0 0 1px #3a7999;}
                                }   
                                .artiste-container {
                                    padding: 2%;
                                }
                                .artiste-container:hover {
                                    animation-name: artiste-container-anim;
                                    animation-duration: 1s;
                                    opacity: 0.7;
                                    box-shadow: inset 0 0 0 1px #3a7999;
                                }
                            </style>
                        {% for i in 0..3 %}
                            <div class="row">
                                {% for j in 0..3 %}
                                <div class="col" style="display: block;">
                                    {% if artistes[i*4+j] %}
                                    <a href="/profil/{{artistes[i*4+j].Utilisateur.ID}}" style="text-decoration:none;">
                                        <div class="artiste-container">
                                            <div id="carouselExampleFade" class="carousel" data-ride="carousel">
                                                <div class="carousel-inner w-100">
                                                    {% if artistes[i*4+j].Utilisateur.Avatar %}
                                                    <div class="carousel-item active" style="background: center/100% url('/img/avatar/{{artistes[i*4+j].Utilisateur.Avatar}}') no-repeat; padding-top: 100%;">
                                                    </div>
                                                    {% else %}
                                                    <div class="carousel-item active" style="background: center/100% url('/img/avatar/default.jpg') no-repeat; padding-top: 100%;">
                                                    </div>                                                    
                                                    {% endif %}
                                                </div>
                                            </div>
                                            <div style="text-align: center; padding-top: 2%;">
                                                <span class="text-dark" style="font-weight: bold; font-size: calc(2.5vmin);">
                                                    {{artistes[i*4+j].Pseudo}}
                                                </span>
                                                <br>
                                                <div class="btn btn-info" style="font-size: calc(2.5vmin);">
                                                    Voir l'artiste
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                    {% endif %}
                                </div>
                                {% endfor %}
                            </div>
                        {% endfor %}
                        </div>
                    </div>
                    <div style="width: 25%; background: url('/ressources/background_custom_gray.png');">
                        <div style="padding: 15px;">
                            <h1>Filtres</h1>
                        </div>
                        <br>
                        <div style="width: 100%; height: 200px; background: center/100% no-repeat url('http://www.triumphintltd.com/uploads/images/Images/bigstock-Website-Construction-Line-Styl-94736711-800x340.jpg?1497780830763')">
                        </div>
                    </div>
                </div>
            </div>


