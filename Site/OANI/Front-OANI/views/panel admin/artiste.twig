          <!-- DÃ©but du code -->
          <div class="container-fluid bg-light" style="height: 100%;">
            <div class="container-fluid d-flex justify-content-between">
              <h1>Artistes</h1>
              <div><a href="/panel_admin/artiste/edit" class="btn btn-primary btn-sm align-bottom mt-4">+</a></div>
            </div>
            <div class="container-fluid bg-light" style="height: 90%; overflow: auto;">
              <table class="table table-striped table-bordered">
                <thead>
                  <tr>
                    <th> Avatar </th>
                    <th> Nom d'utilisateur </th>
                    <th> Pseudo </th>
                    <th> Adresse mail </th>
                    <th> Modifier </th>
                    <th> Supprimer </th>
                  </tr>
                </thead>
                <tbody>
                  {% for artiste in artistes %}
                  <tr>
                    <th> <img src="/img/avatar/{% if artiste.Utilisateur.Avatar %}{{artiste.Utilisateur.Avatar}}{% else %}default.jpg{% endif %}" style="max-height: 75px; max-width: 75px;"> </th>
                    <th> {{artiste.Utilisateur["Nom d'utilisateur"]}} </th>
                    <th> {{artiste.Pseudo}} </th>
                    <th> {{artiste.Utilisateur["Adresse mail"]}} </th>
                    <th scope="col">
                      <a href="/panel_admin/artiste/edit/{{artiste.ID}}" class="btn btn-primary mr-5"></a>
                    </th>
                    <th>
                      <form class="mr-5" action="/panel_admin/artiste/delete" method="POST">
                        <input type="text" name="id" value="{{artiste.ID}}" hidden>
                        <button type="submit" class="btn btn-primary"></button>
                      </form>
                    </th>
                  </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
          </div>
        
