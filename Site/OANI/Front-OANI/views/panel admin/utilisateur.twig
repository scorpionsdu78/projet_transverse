          <div class="container-fluid bg-light" style="height: 100%;">
            <div class="container-fluid d-flex justify-content-between">
              <h1>Utilisateurs</h1>
              <div><a href="/panel_admin/utilisateur/edit" class="btn btn-primary btn-sm align-bottom mt-4">+</a></div>
            </div>
            <div class="container-fluid bg-light" style="height: 90%; overflow: auto;">
              <table class="table table-striped table-bordered">
                <thead>
                  <tr>
                    <th> Avatar </th>
                    <th> Nom d'utilisateur </th>
                    <th> Adresse mail </th>
                    <th> Rang </th>
                    <th> Modifier </th>
                    <th> Supprimer </th>
                  </tr>
                </thead>
                <tbody>
                  {% for utilisateur in utilisateurs %}
                  <tr>
                    <th> <img src="/img/avatar/{% if utilisateur.Avatar %}{{utilisateur.Avatar}}{% else %}default.jpg{% endif %}" style="max-height: 75px; max-width: 75px;"> </th>
                    <th> {{utilisateur["Nom d'utilisateur"]}} </th>
                    <th> {{utilisateur["Adresse mail"]}} </th>
                    <th> {% if utilisateur.Pseudo %} Artiste {% else %} Utilisateur simple {% endif %} </th>
                    <th scope="col">
                      <a href="/panel_admin/utilisateur/edit/{{utilisateur.ID}}" class="btn btn-primary mr-5"></a>
                    </th>
                    <th>
                      <form class="mr-5" action="/panel_admin/utilisateur/delete" method="POST">
                        <input type="hidden" name="id" value="{{utilisateur.ID}}">
                        <button type="submit" class="btn btn-primary"></button>
                      </form>
                    </th>
                  </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
          </div>
        
          <!-- Fin du code -->
